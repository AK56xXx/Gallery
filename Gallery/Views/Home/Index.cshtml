@model Gallery.Models.DTO.GameListVm
@{
    
}


<section class="search-bar">
    <form method="get" asp-action="Index">
        <input type="text" name="term" placeholder="search here">
        <button type="submit"><i class="fa fa-search"></i></button>
        <a class="btn btn-default" href="/Home/Index">All</a>
    </form>
</section>
<section class="movies">
    @foreach (var game in Model.GameList)
    {
        <div class="movie-card" onclick="window.location.href='/Home/GameDetail?gameId=@game.Id'">
            <div class="movie-image">
                <img src="/Uploads/@game.Image">
            </div>
            <div class="movie-info">
                <h4>@game.Title</h4>
                <h4>@game.GenreNames</h4>
                <h4>@game.ReleaseYear</h4>
             @{/*   <h4>Developer(s) : @game.Developer</h4>
                <h4>Publisher : @game.Publisher</h4> */}
            </div>
        </div>
    }
</section>

<div class="pagination">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <a href="/Home/Index?currentPage=@i&term=@Model.Term" class="active">@i</a>
        }
        else
        {
            <a href="/Home/Index?currentPage=@i&term=@Model.Term">@i</a>

        }
    }

</div>